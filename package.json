{
  "name": "@ssc-half-light/post",
  "description": "Posts in *hermes*",
  "type": "module",
  "version": "0.12.0",
  "main": "dist/index.js",
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "test": "npm run build-tests && npm run test-tape-run",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json",
    "preinstall": "export $(cat .env | xargs)",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && export $(cat .env | grep -v \"#\" | xargs) && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.0",
    "@oddjs/odd": "^0.37.1",
    "@ssc-half-light/message": "^0.5.6",
    "@ssc-half-light/util": "^0.7.0",
    "json-canon": "^1.0.1",
    "uint8arrays": "^4.0.3"
  },
  "devDependencies": {
    "@nichoth/tap-ssc": "^0.6.7",
    "@nichoth/tapzero": "^0.8.4",
    "@ssc-hermes/node-components": "^0.1.12",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^11.0.0",
    "typescript": "^5.0.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "license": "AGPL-3.0-or-later",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssc-hermes/post.git"
  },
  "bugs": {
    "url": "https://github.com/ssc-hermes/post/issues"
  },
  "homepage": "https://github.com/ssc-hermes/post#readme"
}
